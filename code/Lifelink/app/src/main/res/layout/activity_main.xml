<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lifelink.lifelink.MainActivity">

    <EditText
        android:id="@+id/colorInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/nameInput"
        android:layout_alignLeft="@+id/nameInput"
        android:layout_alignStart="@+id/nameInput" />

    <Button
        android:id="@+id/gotoCreate"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:onClick="gotoCreate"
        android:text="@string/create_lobby"
        android:visibility="visible"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gotoJoin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gotoCreate"
        android:onClick="gotoJoin"
        android:text="@string/join_lobby"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/gotoChangeName"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:onClick="gotoChangeName"
        android:text="@string/change_name"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_below="@+id/gotoJoin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/gotoChangeColor"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:onClick="gotoChangeColor"
        android:text="@string/change_color"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_below="@+id/gotoJoin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gotoIngame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoIngame"
        android:text="@string/to_ingame"
        android:layout_below="@+id/gotoChangeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/name"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/nameInput"
        android:layout_alignBottom="@+id/nameInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/gotoIngame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/updateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="updateProfile"
        android:text="@string/update" />

    <TextView
        android:id="@+id/color"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/color"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/colorInput"
        android:layout_alignBottom="@+id/colorInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
