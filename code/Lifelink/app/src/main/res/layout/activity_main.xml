<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lifelink.lifelink.MainActivity">

    <Button
        android:id="@+id/gotoCreate"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:onClick="gotoCreate"
        android:text="Create Lobby"
        android:visibility="visible"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gotoJoin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gotoCreate"
        android:onClick="gotoJoin"
        android:text="join lobby"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/gotoChangeName"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:onClick="gotoChangeName"
        android:text="change name"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_below="@+id/gotoJoin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/gotoChangeColor"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:onClick="gotoChangeColor"
        android:text="change color"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_below="@+id/gotoJoin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
